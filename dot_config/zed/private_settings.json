// https://zed.dev/docs/configuring-zed
{
  "active_pane_modifiers": {
    "inactive_opacity": 1.0,
    "border_size": 0.5,
    "magnification": 1.0
  },
  "autosave": "on_focus_change",
  "assistant": {
    "default_model": {
     "provider": "copilot_chat",
     "model": "gpt-4o"
    },
    "version": "2",
    "enabled": true,
    "button": true
  },
  "restore_on_startup": "none",
  "base_keymap": "VSCode",
  "buffer_font_family": "PlemolJP35 Console NF",
  "buffer_font_size": 14.5,
  "buffer_font_features": {
      "calt": false
  },
  "ui_font_size": 14,
  "centered_layout": {
    "left_padding": 0.5,
    "right_padding": 0.5
  },
  "edit_predictions": {
    "disabled_globs": [".env"]
  },
  "tabs": {
    "close_position": "right",
    "file_icons": false,
    "git_status": true
  },
  "lsp": {
    "rust-analyzer": {
      "check": {
        "extraArgs": ["--target-dir", "target/ra"]
      },
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy" // rust-analyzer.checkOnSave.command
        }
      }
    }
  },
  "language_servers": ["!biome", "rust-analyzer"],
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 600,
    "scroll_debounce_ms": 40,
    "show_background": true
  },
  "format_on_save": "off",
  "git": {
    "inline_blame": {
      "enabled": true,
      "show_commit_summary": true
    }
  },
  "journal": {
    "hour_format": "hour24"
  },
  "collaboration_panel": {
    "button": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "selections_menu": true,
    "quick_actions": true
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "terminal": {
    "shell": {
      "with_arguments": {
        "program": "/opt/homebrew/bin/fish",
        "args": []
      }
    },
    "font_family": "PlemolJP35 Console NF",
    "font_size": 14.5,
    "toolbar": {
      "breadcrumbs": false
    }
  }
}
